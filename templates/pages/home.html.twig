{% extends 'base.html.twig' %}

{% block title 'My Agency project' %}

{% block body %}
  <div class="jumbotron text-center">
    <h1>My Agency project</h1>
    <p>The goal of this website is to list properties. In this project we can create, update and delete properties.</p>
  </div>

  <div class="container">
    <h2>The last properties</h2>
    <div class="row flex">
      {% for property in properties %}
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                 <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
              </h5>
              <p class="card-text">{{ property.city }} </p>
              <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.formattedPrice }} â‚¬</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
